{
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "react-native": {
      "transformGroup": "react-native",
      "buildPath": "build/react-native/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/es6",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "typography.js",
          "format": "javascript/es6",
          "filter": {
            "attributes": {
              "category": "font"
            }
          }
        },
        {
          "destination": "spacing.js",
          "format": "javascript/es6",
          "filter": {
            "attributes": {
              "category": "space"
            }
          }
        },
        {
          "destination": "shadows.js",
          "format": "javascript/es6",
          "filter": {
            "attributes": {
              "category": "elevation"
            }
          }
        }
      ],
      "transforms": [
        "attribute/cti",
        "name/cti/camel",
        "color/hex",
        "size/react-native/remToSp",
        "size/react-native/remToDp"
      ]
    },
    "ios": {
      "transformGroup": "ios",
      "buildPath": "build/ios/",
      "files": [
        {
          "destination": "StyleDictionary.swift",
          "format": "ios-swift/class.swift",
          "className": "StyleDictionary"
        },
        {
          "destination": "StyleDictionary.h",
          "format": "ios/macros"
        },
        {
          "destination": "StyleDictionary.m",
          "format": "ios/static.m",
          "type": "StyleDictionary"
        }
      ],
      "transforms": [
        "attribute/cti",
        "name/cti/camel",
        "color/UIColor",
        "content/icon",
        "size/remToPt",
        "font/ios"
      ]
    },
    "android": {
      "transformGroup": "android",
      "buildPath": "build/android/",
      "files": [
        {
          "destination": "colors.xml",
          "format": "android/colors"
        },
        {
          "destination": "dimens.xml",
          "format": "android/dimens"
        },
        {
          "destination": "font_dimens.xml",
          "format": "android/fontDimens"
        },
        {
          "destination": "integers.xml",
          "format": "android/integers"
        }
      ],
      "transforms": [
        "attribute/cti",
        "name/cti/snake",
        "color/hex8android",
        "size/remToSp",
        "size/remToDp"
      ]
    },
    "web": {
      "transformGroup": "web",
      "buildPath": "build/web/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables"
        },
        {
          "destination": "tokens.json",
          "format": "json/nested"
        },
        {
          "destination": "tokens.js",
          "format": "javascript/es6"
        },
        {
          "destination": "tokens.scss",
          "format": "scss/variables"
        }
      ],
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "size/rem",
        "color/css"
      ]
    }
  },
  "transform": {
    "size/react-native/remToSp": {
      "type": "value",
      "matcher": {
        "attributes": {
          "category": "font",
          "type": "size"
        }
      },
      "transformer": {
        "type": "name",
        "transformer": "size/remToSp"
      }
    },
    "size/react-native/remToDp": {
      "type": "value",
      "matcher": {
        "attributes": {
          "category": "space"
        }
      },
      "transformer": {
        "type": "name",
        "transformer": "size/remToDp"
      }
    },
    "font/ios": {
      "type": "value",
      "matcher": {
        "attributes": {
          "category": "font"
        }
      },
      "transformer": {
        "type": "name",
        "transformer": "font/swift"
      }
    }
  },
  "format": {
    "javascript/es6": {
      "format": "javascript/es6"
    },
    "css/variables": {
      "format": "css/variables"
    },
    "json/nested": {
      "format": "json/nested"
    },
    "scss/variables": {
      "format": "scss/variables"
    },
    "ios-swift/class.swift": {
      "format": "ios-swift/class.swift"
    },
    "ios/macros": {
      "format": "ios/macros"
    },
    "ios/static.m": {
      "format": "ios/static.m"
    },
    "android/colors": {
      "format": "android/colors"
    },
    "android/dimens": {
      "format": "android/dimens"
    },
    "android/fontDimens": {
      "format": "android/fontDimens"
    },
    "android/integers": {
      "format": "android/integers"
    }
  },
  "options": {
    "showFileHeader": true,
    "fileHeader": {
      "style": "short",
      "tokens": {
        "generated": true,
        "file": true,
        "version": "1.0.0"
      }
    },
    "outputReferences": true,
    "expand": {
      "typesMap": {
        "dimension": "number",
        "fontFamily": "string",
        "fontWeight": "string",
        "duration": "string",
        "cubicBezier": "string",
        "number": "number",
        "color": "string"
      }
    }
  },
  "hooks": {
    "filters": {
      "flirtcraft/color": {
        "attributes": {
          "category": "color"
        }
      },
      "flirtcraft/font": {
        "attributes": {
          "category": "font"
        }
      },
      "flirtcraft/space": {
        "attributes": {
          "category": "space"
        }
      },
      "flirtcraft/elevation": {
        "attributes": {
          "category": "elevation"
        }
      },
      "flirtcraft/animation": {
        "attributes": {
          "category": "animation"
        }
      }
    },
    "transforms": {
      "flirtcraft/color/react-native": {
        "type": "value",
        "matcher": {
          "attributes": {
            "category": "color"
          }
        },
        "transformer": "color/hex"
      },
      "flirtcraft/size/react-native": {
        "type": "value",
        "matcher": {
          "attributes": {
            "category": "space"
          }
        },
        "transformer": "size/px"
      },
      "flirtcraft/elevation/react-native": {
        "type": "value",
        "matcher": {
          "attributes": {
            "category": "elevation"
          }
        },
        "transformer": "shadow/react-native"
      }
    },
    "formats": {
      "flirtcraft/react-native/colors": {
        "templatePath": "templates/react-native-colors.template"
      },
      "flirtcraft/react-native/typography": {
        "templatePath": "templates/react-native-typography.template"
      },
      "flirtcraft/react-native/spacing": {
        "templatePath": "templates/react-native-spacing.template"
      },
      "flirtcraft/react-native/shadows": {
        "templatePath": "templates/react-native-shadows.template"
      }
    }
  },
  "log": "warn",
