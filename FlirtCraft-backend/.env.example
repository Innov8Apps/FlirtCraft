# FlirtCraft Backend - Environment Configuration Template
# Copy this file to .env and update the values

#=============================================================================
# Application Configuration
#=============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

#=============================================================================
# Database Configuration (Supabase)
#=============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/flirtcraft
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

#=============================================================================
# Redis Configuration
#=============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

#=============================================================================
# OpenRouter AI API Configuration
#=============================================================================
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_APP_NAME=FlirtCraft
OPENROUTER_SITE_URL=https://flirtcraft.app

# AI Model Configuration
PRIMARY_AI_MODEL=google/gemini-2.5-flash-lite
FALLBACK_AI_MODEL=google/gemini-2.0-flash-lite-001
AI_RESPONSE_TIMEOUT=30
AI_MAX_RETRIES=3

#=============================================================================
# Security & Authentication
#=============================================================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

#=============================================================================
# Rate Limiting
#=============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CONVERSATIONS_PER_HOUR=10
RATE_LIMIT_MESSAGES_PER_MINUTE=30

#=============================================================================
# Background Jobs & Processing
#=============================================================================
RQ_DASHBOARD_ENABLED=true
WORKER_CONCURRENCY=2
JOB_TIMEOUT=300
RESULT_TTL=3600

#=============================================================================
# Monitoring & Logging
#=============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=0.1
LOG_LEVEL=DEBUG
STRUCTURED_LOGGING=true

#=============================================================================
# CORS Configuration
#=============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://localhost:19000
CORS_ALLOW_CREDENTIALS=true

#=============================================================================
# Health Check Configuration
#=============================================================================
HEALTH_CHECK_TIMEOUT=10
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

#=============================================================================
# Production Deployment (Railway)
#=============================================================================
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_SERVICE_ID=your-railway-service-id

#=============================================================================
# Development Tools
#=============================================================================
RELOAD_ENABLED=true
API_DOCS_ENABLED=true
PROFILING_ENABLED=false
DEBUG_TOOLBAR_ENABLED=false

#=============================================================================
# Feature Flags
#=============================================================================
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_BACKGROUND_JOBS=true
ENABLE_WEBSOCKETS=true
ENABLE_METRICS_COLLECTION=true

#=============================================================================
# Business Logic Configuration
#=============================================================================
FREE_TIER_DAILY_CONVERSATIONS=5
PREMIUM_TIER_DAILY_CONVERSATIONS=50
STREAK_RESET_HOUR=4
ACHIEVEMENT_CHECK_INTERVAL=300